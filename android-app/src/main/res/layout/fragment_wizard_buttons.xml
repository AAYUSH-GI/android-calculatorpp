<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	style="@style/WizardButtons"
	xmlns:a="http://schemas.android.com/apk/res/android"
	a:layout_gravity="center_horizontal|bottom"
	a:gravity="center">

	<Button
		a:id="@+id/wizard_prev"
		a:layout_width="0dp"
		a:layout_height="wrap_content"
		a:layout_weight="1" />

	<Button
		a:id="@+id/wizard_next"
		a:layout_width="0dp"
		a:layout_height="wrap_content"
		a:layout_weight="1" />

</LinearLayout>